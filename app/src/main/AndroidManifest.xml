<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.abhishek.farmer_companion">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/btp_app_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".OneTimeActivity"></activity>
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".CropPage"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity android:name=".SlideViewer"></activity>
        <activity android:name=".QueryPage"></activity>

        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".TutorialSlide"></activity>
        <activity android:name=".QueryResponsePage"></activity>
    </application>
</manifest>
